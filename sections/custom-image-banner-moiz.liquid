<div class="custom-banner">
  <div class="banner-overlay">
    <h2>{{ section.settings.banner_heading }}</h2>
  </div>
</div>

<style>
  /* Custom Banner Styles */
  .custom-banner {
    position: relative;
    width: 100%;
    height: 450px; /* Adjust as needed */
    margin-bottom: 36px;
    background-image: url({{ section.settings.banner_image | image_url }}); /* Use the selected image */
    background-size: cover; /* Ensure the image covers the full space */
    background-position: center; /* Center the image */
    background-repeat: no-repeat; /* Prevent the image from repeating */
  }

  .banner-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4); /* Semi-transparent overlay */
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .banner-overlay h2 {
    color: white;
    font-size: 6rem; /* Adjust size as needed */
    font-weight: bold;
    text-transform: uppercase;
    text-align: center;
  }
</style>

{% schema %}
  {
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image",
    },
    {
      "type": "text",
      "id": "banner_heading",
      "label": "Banner Heading",
    },
    {
      "type": "text",
      "id": "banner_alt_text",
      "label": "Image Alt Text",
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}
